<% if session[:user_id] == nil %>
  <%= link_to "Login", login_path %>
<% else %>
  <%= link_to "Logout", logout_path %>
<% end %>
<%= link_to "Create Account", new_user_path %>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :search, params[:search], :placeholder => "Bernie's Bistro, Sushi, BBQ..."
  %>
  <%= submit_tag("Search") %>
<% end %>


<% @restaurants.each do |restaurant| %>
  <p><b><%= restaurant.category%></b></p>
  <p><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></p>
  <p><%= restaurant.street_address%></p>
  <p><%= restaurant.city %>, <%=restaurant.state%></p><br>
  <% end %>
